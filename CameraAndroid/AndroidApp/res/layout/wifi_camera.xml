<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视频监控客户端"
        android:textSize="30dip"
        />"
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
         <TextView
            android:id="@+id/ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:text="ip地址"/>
        <EditText
            android:id="@+id/ip_edit"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ip"
            android:textSize="20dip"
            android:text="192.168.1.120"/>
        <TextView
            android:id="@+id/duankou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ip_edit"
            android:textSize="20dip"
            android:text="端口"/>
        <EditText
            android:id="@+id/duankou_edit"
            android:layout_width="400dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duankou"
            android:textSize="20dip"
            android:text="3333"/>     
        <Button
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接"
            android:textSize="40dip"
            android:layout_below="@+id/duankou_edit"
            />            
    </RelativeLayout>

</LinearLayout>